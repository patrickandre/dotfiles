# Shell defaults
alias lls='ls -ALHO -lh'
alias top='top -a -o cpu'

# Shortcuts
alias tcpdump="tcpdump -i en1 -s 0 -n -e -x -vvv"
alias showallfiles="defaults write com.apple.Finder AppleShowAllFiles TRUE"
alias hidefiles="defaults write com.apple.Finder AppleShowAllFiles FALSE"
alias truecrypt='/Applications/TrueCrypt.app/Contents/MacOS/Truecrypt --text'
alias update='brew update; brew upgrade; brew doctor;'
